{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Build Varnex Auth Service",
      "type": "shell",
      "command": "docker compose",
      "args": ["build", "auth-service"],
      "options": {
        "cwd": "${workspaceFolder}/.docker"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Rebuild Varnex Auth Service",
      "type": "shell",
      "command": "docker compose",
      "args": ["build", "--no-cache", "auth-service"],
      "options": {
        "cwd": "${workspaceFolder}/.docker"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Start Varnex Auth Service",
      "type": "shell",
      "command": "docker compose",
      "args": ["up", "-d"],
      "options": {
        "cwd": "${workspaceFolder}/.docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Stop Varnex Auth Service",
      "type": "shell",
      "command": "docker compose",
      "args": ["down"],
      "options": {
        "cwd": "${workspaceFolder}/.docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: View Varnex Auth Service Logs",
      "type": "shell",
      "command": "docker compose",
      "args": ["logs", "-f", "auth-service"],
      "options": {
        "cwd": "${workspaceFolder}/.docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: View All Logs",
      "type": "shell",
      "command": "docker compose",
      "args": ["logs", "-f"],
      "options": {
        "cwd": "${workspaceFolder}/.docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Dotnet: Build Solution",
      "type": "shell",
      "command": "dotnet build Varnex.AuthService.sln",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Dotnet: Run API",
      "type": "shell",
      "command": "dotnet run --project src/Varnex.AuthService.Api/Varnex.AuthService.Api.csproj",
      "group": "none",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Dotnet: Run Tests",
      "type": "shell",
      "command": "dotnet test test/",
      "group": "test",
      "problemMatcher": "$msCompile"
    }
  ]
}
