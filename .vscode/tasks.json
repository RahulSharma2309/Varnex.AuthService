{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Build Auth Service",
      "type": "shell",
      "command": "docker-compose",
      "args": ["build", "auth-service"],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Rebuild Auth Service",
      "type": "shell",
      "command": "docker-compose",
      "args": ["build", "--no-cache", "auth-service"],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Start Auth Service",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Stop Auth Service",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: View Auth Service Logs",
      "type": "shell",
      "command": "docker-compose",
      "args": ["logs", "-f", "auth-service"],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: View All Logs",
      "type": "shell",
      "command": "docker-compose",
      "args": ["logs", "-f"],
      "options": {
        "cwd": "${workspaceFolder}/docker"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}















